<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pr_idi.mydatabaseexample.Inici">

    <TextView
        android:text="Omple els camps i fes clic a crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Titol"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/titol"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/any"
        android:text="Any d'estrena"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/pais"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="PaÃ­s"
        android:ems="10"
        android:id="@+id/pais"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/titol"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Director"
        android:ems="10"
        android:id="@+id/director"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/any"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/nota"
        android:text="Nota"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/protagonista"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Protagonista"
        android:ems="10"
        android:id="@+id/protagonista"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/director"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelar_crear"
        android:visibility="visible"
        android:onClick="onClick"
        android:layout_marginEnd="56dp"
        android:layout_alignBaseline="@+id/crear"
        android:layout_alignBottom="@+id/crear"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:id="@+id/crear"
        android:onClick="onClick"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/nota"
        android:layout_alignParentStart="true"
        android:visibility="visible" />
</RelativeLayout>
